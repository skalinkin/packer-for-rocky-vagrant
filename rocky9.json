{
  "variables": {
    "boot_wait": "5s",
    "disk_size": "40960",
    "iso_checksum": "69fa71d69a07c9d204da81767719a2af183d113bc87ee5f533f98a194a5a1f8a",
    "iso_url": "https://download.rockylinux.org/pub/rocky/9/isos/x86_64/Rocky-9.1-x86_64-dvd.iso",
    "memsize": "1024",
    "numvcpus": "1",
    "ssh_password": "vagrant",
    "ssh_username": "vagrant",
    "vm_name": "rocky-9.1-x86_64",
    "ks_path": "ks.cfg"
  },
  "builders": [
    {
      "type": "virtualbox-iso",
      "hard_drive_interface": "sata",
      "boot_command": [
        "<up><wait><tab> inst.text inst.ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/{{user `ks_path`}}<enter><wait>"
      ],
      "boot_wait": "{{ user `boot_wait` }}",
      "disk_size": "{{ user `disk_size` }}",
      "guest_os_type": "RedHat_64",
      "headless": false,
      "http_directory": "http",
      "iso_checksum": "{{ user `iso_checksum` }}",
      "iso_url": "{{ user `iso_url` }}",
      "shutdown_command": "echo '{{ user `ssh_username` }}'|sudo -S /sbin/halt -h -p",
      "ssh_password": "{{ user `ssh_password` }}",
      "ssh_port": 22,
      "ssh_username": "{{ user `ssh_username` }}",
      "ssh_timeout": "30m",
      "guest_additions_mode": "attach",
      "vboxmanage": [
        [
          "modifyvm",
          "{{.Name}}",
          "--memory",
          "8192"
        ],
        [
          "modifyvm",
          "{{.Name}}",
          "--cpus",
          "6"
        ],
        [
          "modifyvm",
          "{{.Name}}",
          "--vram",
          "128"
        ],
        [
          "modifyvm",
          "{{.Name}}",
          "--clipboard-mode",
          "bidirectional"
        ],
        [
          "modifyvm",
          "{{.Name}}",
          "--draganddrop",
          "bidirectional"
        ],
        [
          "modifyvm",
          "{{.Name}}",
          "--vrde",
          "off"
        ],
        [
          "modifyvm",
          "{{.Name}}",
          "--nat-localhostreachable1",
          "on"
        ]
      ]
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "execute_command": "echo '{{ user `ssh_username` }}'|{{.Vars}} sudo -S -E bash '{{.Path}}'",
      "expect_disconnect": "true",
      "scripts": [
        "scripts/vmtools.sh"
      ]
    },
    {
      "type": "shell",
      "execute_command": "echo '{{ user `ssh_username` }}'|{{.Vars}} sudo -S -E bash '{{.Path}}'",
      "pause_before": "10s",
      "scripts": [
        "scripts/docker.sh"
      ]
    },
    {
      "type": "shell",
      "execute_command": "echo '{{ user `ssh_username` }}'|{{.Vars}} sudo -S -E bash '{{.Path}}'",
      "pause_before": "10s",
      "scripts": [
        "scripts/cleanup.sh"
      ]
    }
  ],
  "post-processors": [
    [
      {
        "output": "builds/{{.Provider}}-rocky-9.box",
        "type": "vagrant"
      },
      {
        "type": "shell-local",
        "inline": [
          "vagrant box add builds\\virtualbox-rocky-9.box --force --name local/rocky-9"
        ]
      },
      {
        "type": "vagrant-cloud",
        "box_tag": "skalinkin/rocky-9",
        "version": "2022.174.1",
        "version_description": "VirtualBox 7.0.4, Vagrant 2.3.4, Docker 20.10.21"
      }
    ]
  ]
}
