{
  "variables": {
    "boot_wait": "5s",
    "disk_size": "40960",
    "iso_checksum": "0081f8b969d0cef426530f6d618b962c7a01e71eb12a40581a83241f22dfdc25",
    "iso_url": "https://download.rockylinux.org/pub/rocky/8/isos/x86_64/Rocky-8.5-x86_64-dvd1.iso",
    "memsize": "1024",
    "numvcpus": "1",
    "ssh_password": "vagrant",
    "ssh_username": "vagrant",
    "vm_name": "Rocky-8.5-x86_64",
    "ks_path": "ks.cfg"
  },
  "builders": [
    {
      "type": "virtualbox-iso",
      "hard_drive_interface": "sata",
      "boot_command": [
        "<up><wait><tab> inst.text inst.ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/{{user `ks_path`}}<enter><wait>"
      ],
      "boot_wait": "{{ user `boot_wait` }}",
      "disk_size": "{{ user `disk_size` }}",
      "guest_os_type": "RedHat_64",
      "headless": false,
      "http_directory": "http",
      "iso_checksum": "{{ user `iso_checksum` }}",
      "iso_url": "{{ user `iso_url` }}",
      "shutdown_command": "echo '{{ user `ssh_username` }}'|sudo -S /sbin/halt -h -p",
      "ssh_password": "{{ user `ssh_password` }}",
      "ssh_port": 22,
      "ssh_username": "{{ user `ssh_username` }}",
      "ssh_timeout": "30m",
      "vboxmanage": [
        [
          "modifyvm",
          "{{.Name}}",
          "--memory",
          "8192"
        ],
        [
          "modifyvm",
          "{{.Name}}",
          "--cpus",
          "6"
        ],
        [
          "modifyvm",
          "{{.Name}}",
          "--vram",
          "128"
        ],
        [
          "modifyvm",
          "{{.Name}}",
          "--graphicscontroller",
          "vmsvga"
        ],
        [
          "modifyvm",
          "{{.Name}}",
          "--clipboard-mode",
          "bidirectional"
        ],
        [
          "modifyvm",
          "{{.Name}}",
          "--draganddrop",
          "bidirectional"
        ]
      ]
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "execute_command": "echo '{{ user `ssh_username` }}'|{{.Vars}} sudo -S -E bash '{{.Path}}'",
      "scripts": [
        "provision.sh",
        "cleanup.sh"
      ]
    }
  ],
  "post-processors": [
    [
      {
        "output": "builds/{{.Provider}}-rocky-8.box",
        "type": "vagrant"
      },
      {
        "type": "shell-local",
        "inline": [
          "vagrant box add builds\\virtualbox-rocky-8.box --force --name local/rocky-8"
        ]
      },
      {
        "type": "vagrant-cloud",
        "box_tag": "skalinkin/rocky-8",
        "version": "2021.357.0",
        "version_description": "VirtualBox 6.1.30, Vagrant 2.2.19. Docker, Chrome"
      }
    ]
  ]
}